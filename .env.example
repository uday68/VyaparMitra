# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/vyapar-mitra
POSTGRES_URI=postgresql://localhost:5432/vyapar_mitra
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=vyapar_mitra
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Translation Service (BHASHINI)
BHASHINI_API_KEY=your_bhashini_api_key_here
BHASHINI_BASE_URL=https://bhashini.gov.in/api
BHASHINI_TIMEOUT=10000

# Text-to-Speech Configuration
TTS_MODEL=tacotron
VOICE_CLONING_ENABLED=true
AUDIO_FORMAT=wav
AUDIO_SAMPLE_RATE=22050
AUDIO_CACHE_TTL=3600

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Business Logic Configuration
NEGOTIATION_TTL=86400000
STOCK_LOCK_TTL=300
QR_SESSION_TTL=3600
LOW_STOCK_THRESHOLD=5

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads