# Server Configuration
NODE_ENV=production
PORT=4000
HOST=0.0.0.0

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRY=24h
REFRESH_SECRET=your-super-secure-refresh-secret-key-change-this-in-production
REFRESH_EXPIRY=7d
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database Configuration
MONGODB_URI=mongodb://username:password@localhost:27017/vyapar_mitra_prod
POSTGRES_URI=postgresql://username:password@localhost:5432/vyapar_mitra_prod
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=vyapar_mitra_prod
POSTGRES_USER=vyapar_user
POSTGRES_PASSWORD=secure_postgres_password

REDIS_URL=redis://username:password@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password

# Translation Service (BHASHINI)
BHASHINI_API_KEY=your-bhashini-api-key
BHASHINI_BASE_URL=https://bhashini.gov.in/api
BHASHINI_TIMEOUT=10000

# Text-to-Speech Configuration
TTS_MODEL=tacotron
VOICE_CLONING_ENABLED=true
AUDIO_FORMAT=wav
AUDIO_SAMPLE_RATE=22050
AUDIO_CACHE_TTL=3600

# Business Logic Configuration
NEGOTIATION_TTL=86400000
STOCK_LOCK_TTL=300
QR_SESSION_TTL=3600
LOW_STOCK_THRESHOLD=5

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/uploads/vyapar-mitra

# Logging Configuration
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true
LOG_DIRECTORY=/var/log/vyapar-mitra

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# SSL/TLS Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/vyapar-mitra.crt
SSL_KEY_PATH=/etc/ssl/private/vyapar-mitra.key

# External Services
TRANSLATION_PROVIDER=google
TRANSLATION_API_KEY=your-translation-api-key

# Performance Configuration
NODE_OPTIONS=--max-old-space-size=2048
UV_THREADPOOL_SIZE=16

# Cluster Configuration
CLUSTER_WORKERS=auto